<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/main_padding">

    <TextView
        android:id="@+id/main_tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_error"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/error_tv_margin_bottom"/>

    <EditText
        android:id="@+id/main_et_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/et_login_hint"
        android:text="john@domain.tld"/>

    <EditText
        android:id="@+id/main_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/et_password_hint"
        android:text="123123"/>

    <Button
        android:id="@+id/main_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLogin"
        android:text="@string/main_btn_login_text"
        android:textAllCaps="false"/>

</LinearLayout>
